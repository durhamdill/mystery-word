<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mystery Word</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Special+Elite" rel="stylesheet">
  </head>
  <body>
    <div class="wrapper">


      <form class="" action="/" method="get">
        <label for="level">Choose Your Level: </label>
        <select class="" name="level" id="level">
          <option value="Easy">Easy (4-6 letters)</option>
          <option value="Normal">Normal (6-8 letters)</option>
          <option value="Hard">Hard (8-10 letters)</option>
        </select>
        <button type="submit" name="button">Submit</button>
      </form>


      <h1>Mystery Word</h1>

      <div class="detectiveBox">
        <img src="detective.png" alt="">
        <p id="talkbubble">{{{message}}}</p>
      </div>

      {{ ^gameOver }}
        <form class="" action="/" method="post">
          <input type="text" name="letter" placeholder="Pick a letter">
          <button type="submit" name="button">Submit</button>
        </form>
      {{ /gameOver }}

      {{ #gameOver }}
        <form class="" action="/" method="get">
          <button type="submit" name="button">Play Again!</button>
        </form>
      {{ /gameOver }}

      <!-- <p>{{word}}</p> -->

      <div class="wordBox">
          {{#letters}}
            <div class="letters"><p>{{.}}</p></div>
          {{/letters}}
      </div>

      <div class="gameStats">
        <div id="statBox">
          <p>GAME STATS:</p>
          <p><span id="yellow">Guesses Remaining:</span> {{lives}}</p>
          <p><span id="yellow">Letters Guessed:</span> {{guesses}}</p>
        </div>
      </div>

    </div>
  </body>
</html>
